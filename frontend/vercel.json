{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ]
,
  "env": {
    "REACT_APP_API_URL": "https://disasterreports-backend.onrender.com/api"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://disasterreports-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
